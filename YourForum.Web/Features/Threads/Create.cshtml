@model YourForum.Web.Features.Threads.Create.Command

@{ 
    var authorId = User.Claims.FirstOrDefault(c => c.Type.Equals("Id"))?.Value ?? "0";
}

<div class="page-header">
    <h1>Skapa forumtråd</h1>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="create" method="post">
            @Html.ValidationDiv()

            <input type="hidden" name="AuthorId" value="@authorId" />

            @Html.FormBlock(m => m.Subject)

            @Html.FormBlock(m => m.Body)

            <div class="form-group">
                <button type="submit" class="btn btn-success pull-right">
                    Spara
                </button>

                <button asp-action="index" class="btn btn-link pull-left">
                    Avbryt
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}